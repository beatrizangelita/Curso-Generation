// Verificar se a pessoa é maior ou menor de idade

programa
{
	
	funcao inicio()
	{
		inteiro idade
		escreva("Escreva sua idade: ")
		leia(idade)

		se (idade >= 18){
			escreva("Você é maior de idade!")
			}
			senao {
				escreva("Você é menor de idade!")
				}

	}
}
